<% if current_user.present? && current_user.is_manager? %>
<div class="home-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= image_path "background-hp.jpg" %>');">
  <div class="home-looking-for">
    <h1>YOU ARE
    <br>LOOKING FOR A NEW</h1>
  </div>
  <div class="home-btns">
    <%= link_to "POSITION", vacancy_search_path, class: "home-btn-job" %>
    <%= link_to "CANDIDATE", profile_search_path, class: "home-btn-candidate" %>
  </div>
</div>
<% elsif current_user.present? %>
<div class="home-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= image_path "background-hp.jpg" %>');">
  <div class="home-looking-for">
    <h1 id="title-hp"><span class="banner-typed-text"></span></h1>
    <!-- <h1>YOUR CAREER
    <br> YOUR SKILLS
    <br> YOUR MOVE</h1> -->
  </div>
  <div class="home-btns">
    <%= link_to "DISCOVER", vacancy_search_path, class: "home-btn-job" %>
  </div>
</div>
<% else %>
<div class="home-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= image_path "background-hp.jpg" %>');">
  <div class="home-looking-for">
    <h1 id="title-hp"><span class="banner-typed-text"></span></h1>
    <!--
    <h1>YOUR CAREER
    <br> YOUR SKILLS
    <br> YOUR MOVE</h1> -->
  </div>
  <div class="home-btns">
    <%= link_to "DISCOVER", new_user_session_path, class: "home-btn-job" %>
  </div>
</div>
<% end %>
