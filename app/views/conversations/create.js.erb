if (conversation.length !== 1) {
  conversations.insertAdjacentHTML('beforeend', '<%= j render "conversations/conversation", conversation: @conversation, user: current_user %>');
  conversation = conversations.querySelector('[data-conversation-id="<%= @conversation.id %>"]');
}

conversation.querySelector('.panel-body').classList.add('is-visible');

