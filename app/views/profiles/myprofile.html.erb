<div class="container">

  <!-- title box -->
  <div class="myprofile-container">
    <div class="myprofile-image">
      <%= cl_image_tag @user.photo %>
    </div>
    <div class="myprofile-name">
      <h1><%= @user.first_name %></h1>
    </div>
  </div>

  <div class="d-flex">
    <div class="left">

      <!-- left side -->

      <!-- description box -->

      <div class="myprofile-info-container">
        <div class="myprofile-info-card">
          <div class="d-flex justify-content-between">
            <h2><%= @user.job_title %></h2>
            <i class="fas fa-edit" id="edit-description"></i>
          </div>
          <div>
            <h5 ><%= @user.department %></h5>
            <h5 align="right"><%= @user.location %></h5>
          </div>
          <div id="description">
            <p><%= @user.description %></p>
          </div>
          <div id="description-form">
            <%= simple_form_for current_user, url: myprofile_path(@user), html: { method: :patch } do |f| %>
           <%= f.input :description, as: :text, label: false, placeholder: 'Tell us what others need to know' %>
           <%= f.button :submit %>
           <% end %>
         </div>

         <!-- key experiences -->

         <div class="myprofile-skill-card" id="key">
          <div class="d-flex justify-content-between">
            <h3>KEY EXPERIENCE</h3>
            <i class="fas fa-edit" id="clear-key"></i>
          </div>
          <div class="skills-grid">

            <% @experience.each do |skill| %>
            <label for="<%= "skill-item-#{skill.id}" %>" class="skill-grid-item checkbox key" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path skill.photo, height: 120, width: 120, crop: :fill %>')">

            <div class="section">
              <p class="show-profile"><%= skill.name %></p>
              <div class="overlay">
              </div>
            </div>
          </label>
          <% end %>
        </div>
      </div>
    </div>
    <div class="right">

      <!-- right side  -->

      <!-- Hard Skills -->
      <div class="myprofile-skill-card" id="hard">
        <div class="d-flex justify-content-between">
          <h3>HARD SKILLS</h3>
          <i class="fas fa-edit" id="clear-hard"></i>
        </div>
        <div class="skills-grid">
          <% @hard_skills.each do |skill| %>
          <label for="<%= "skill-item-#{skill.id}" %>" class="skill-grid-item checkbox hard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
          url('<%= cl_image_path skill.photo, height: 120, width: 120, crop: :fill %>')">
          <div class="section">
            <p class="show-profile"><%= skill.name %></p>
            <div class="overlay">
            </div>
          </div>
        </label>
        <% end %>
      </div>
    </div>

    <!-- soft Skills -->
    <div class="myprofile-skill-card" id="hard">
      <div class="d-flex justify-content-between">
        <h3>SOFT SKILLS</h3>
        <i class="fas fa-edit" id="clear-soft"></i>
      </div>
      <div class="skills-grid">
        <% @soft_skills.each do |skill| %>
        <label for="<%= "skill-item-#{skill.id}" %>" class="skill-grid-item checkbox hard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
        url('<%= cl_image_path skill.photo, height: 120, width: 120, crop: :fill %>')">
        <div class="section">
          <p class="show-profile"><%= skill.name %></p>
          <div class="overlay">
          </div>
        </div>
      </label>
      <% end %>
    </div>
  </div>
</div>
</div>


</div>
